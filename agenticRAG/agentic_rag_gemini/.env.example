# Gemini API Keys (comma-separated, system rotates on quota errors)
# Use multiple keys for automatic rotation when quota is exceeded
GEMINI_API_KEYS=your_api_key_1,your_api_key_2,your_api_key_3

# Legacy: Single API Key (fallback if GEMINI_API_KEYS not set)
GEMINI_API_KEY=AIzaSyAH6EkIRmTbEFi3M-7JPiGBXKmBdZEBlYk

# Legacy: OpenAI API Key (Optional, for fallback)
# OPENAI_API_KEY=your_openai_api_key_here

# Orchestrator Model (SLM)
ORCHESTRATOR_MODEL=gemini-2.5-flash
# Alternative: gemini-2.5-pro, gemini-2.0-flash

# LLM for Response Generation
LLM_MODEL=gemini-2.5-flash
# Alternative: gemini-2.5-pro, gemini-2.0-flash
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# Alternative: models/text-embedding-004 (Gemini)

# Vector Database
VECTOR_DB_TYPE=chromadb
# Options: chromadb, qdrant
VECTOR_DB_PATH=./data/vector_store
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Memory Settings
MAX_MEMORY_ITEMS=100
MEMORY_RELEVANCE_THRESHOLD=0.7
CONVERSATION_SUMMARY_INTERVAL=5

# RAG Settings
TOP_K_RETRIEVAL=5
SIMILARITY_THRESHOLD=0.75
ENABLE_QUERY_EXPANSION=true

# Retry and Fallback
MAX_RETRIES=3
RETRY_DELAY=1.0
ENABLE_FALLBACK=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/agentic_rag.log

# Feature Flags
ENABLE_MEMORY_RETRIEVAL=true
ENABLE_RESPONSE_VALIDATION=true
ENABLE_SUMMARIZATION=true
